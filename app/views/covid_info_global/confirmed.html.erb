<h1 class="text-white">Confirmed</h1>

<table class="table table-hover table-bordered bg-white">
  <thead class="thead-dark">
    <tr>
      <th>Country</th>
      <th>City</th>
      <th>Confirmed</th>
      <th>Last update</th>
    <tr>
  </thead>

  <tbody>
    <% @confirmed.each do |confirmed| %>
      <tr>
        <td><%= confirmed['countryRegion'] %></td>
        <td><%= confirmed['provinceState'] %></td>
        <td><%= link_to confirmed['confirmed'], "/country/confirmed/#{confirmed['iso3']}" %></td>
        <td><%= parse_time(confirmed['lastUpdate']) %></td>
      </tr>
    <% end %>
  </tbody>
</table>